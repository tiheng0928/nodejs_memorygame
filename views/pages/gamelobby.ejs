				socket.on('check_turn_id',function(room){
					turn_id = room.turn_id;
					now_turn = turn_id%4;
					console.log(now_turn);
					if(player_id == now_turn){
						$('.wait').fadeOut(500);
					}
					else{
						$('.wait').fadeIn(500);
					}
				});
			</script>
